<!DOCTYPE html>
<html lang="en">
  
  <%- include("../partials/head.ejs") %>
  
<body>
  <%- include("../partials/header.ejs") %>
  <main>

    <form class="productsCreates" action="/products/create" method="POST" enctype="multipart/form-data">
      <fieldset>
        <% if(typeof errors != 'undefined'){ %>
          <ul class="claseNueva">
              <% for (let i = 0; i < errors.length; i++) { %>
                  <li style="color:rgb(167, 36, 36); padding-left: 20px;" class="claseNueva">
                      <%= errors[i].msg %>
                  </li>
              <% } %> 
          </ul>
      <% } %>
      <h3><label for="productName">Nombre del producto: <input type="text" name="productName" id="productName"></label></h3>
      <br>
      <h3><label for="productDescription">Descripción del producto: </label></h3>
      <h3><textarea name="productDescription" id="productDescription" cols="50" rows="5" >Min 20 caracteres</textarea></h3>
      <h3><label for="productImage">Imagen</label></h3>
      <input type="file" name="productImage" id="productImage">
      <div class="product-type">
      <br>
      <h3>Categoria: </h3>
        <div class="product-category">
          <h4><label for="productClass"><input type="radio" name="productClass" value="decoracion"> Decoración</label>
          <label for="productClass"><input type="radio" name="productClass" value="mates"> Mates</label>
          <label for="productClass"><input type="radio" name="productClass" value="animacion"> Animación</label>
          <label for="productClass"><input type="radio" name="productClass" value="macetas"> Macetas</label>
          <label for="productClass"><input type="radio" name="productClass" value="harry-potter"> Harry Potter</label></h4>
        </div>
        <br>
      <h3><div class="product-price">
        <label for="productPrice">Precio</label>
        <input type="number" min="0.01" step="0.01" max="50000" name="productPrice" id="productPrice" value="00.01">
      </div></h3>
      <br>
      <h3><button class="buttons" type="submit">Subir producto</button></h3>
      <br>
    </fieldset>
    </form>
  </main>

  <footer>
    <%- include ("../partials/footer.ejs") %>
    </footer>

    <script src="js/productUpload.js"></script>

  </body>
</html>